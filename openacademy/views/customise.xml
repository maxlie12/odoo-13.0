<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- tree view   -->
    <record id="view_course_tree" model="ir.ui.view">
        <field name="name">course.tree</field>
        <field name="model">course.academy</field>
        <field name="arch" type="xml">
            <tree>
                <field name="author"/>
                <field name="image"/>
                <field name="description"/>
                <field name="responsible_user"/>
            </tree>
        </field>
    </record>

    <!-- form Views  -->
    <record id="course_view_form" model="ir.ui.view">
        <field name="name">course.form</field>
        <field name="model">course.academy</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form string="Idea form">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="image" widget="image" class="oe_avatar"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
    <!--  calendar   -->

    <!--    kanban view    -->
    <record id = 'view_course_kanban' model="ir.ui.view">
        <field name="name">course.kanban</field>
        <field name="model">course.academy</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="row">
                                    <div class="col-md-4">
                                        <h3 style="background-color: Gray"><field name="author">name author</field></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!--  wizard   -->
    <record model="ir.ui.view" id="wizard_form_view">
        <field name="name">wizard.form</field>
        <field name="model">wizard.academy</field>
        <field name="arch" type="xml">
            <form string="Add attendees">
                <group>
                    <field name="session_id"/>
                    <field name="attendees_id"/>
                </group>
            </form>
        </field>
    </record>
    <!-- action window wizard   -->

    <!-- search    -->
    <record id="view_course_search" model="ir.ui.view">
        <field name="name">course.search</field>
        <field name="model">course.academy</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="author"/>
            </search>
        </field>
    </record>

    <!-- Action Menu course   -->
    <record id="view_course_action" model="ir.actions.act_window">
        <field name="name">course</field>
        <field name="res_model">course.academy</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
          <p class="o_view_content_smiling_face">
            How do you know course?
          </p>
        </field>
    </record>

        <!--  menu item  -->
    <menuitem id="course_root"
              name="Courses"
              sequence="1"/>

    <menuitem id="training_course_root"
              name="Course"
              parent="course_root"
              action="view_course_action"
              />

</odoo>